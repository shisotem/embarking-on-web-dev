<% if (success && success.length) { %> <!-- successはメッセージが入っていないとき、空の配列 -->
    <div class="alert alert-success alert-dismissible fade show" role="alert"> <!-- alertはスクリーンリーダのためにroleを書くようにする -->
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) { %> <!-- errorはメッセージが入っていないとき、空の配列 -->
    <div class="alert alert-danger alert-dismissible fade show" role="alert"> <!-- alertはスクリーンリーダのためにroleを書くようにする -->
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>